<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="using:demkur"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="demkur.MainWindow"
		x:CompileBindings="False"
        Title="demkur">

	<Window.Resources>
		<local:DiscountToBackgroundConverter x:Key="DiscountToBackgroundConverter" />
	</Window.Resources>
	
	<DockPanel>
		<StackPanel
		DockPanel.Dock="Top"
		Spacing="5"
		HorizontalAlignment="Center"
		Orientation="Horizontal"
		Height="70">
			<StackPanel>
				<TextBlock
					HorizontalAlignment="Center"
					Text="Стоимость">
				</TextBlock>
				<ComboBox
					VerticalAlignment="Center"
					Width="100"
					x:Name="titleComboBox">
					<ComboBoxItem>
						без сорт
					</ComboBoxItem>
					<ComboBoxItem>
						убывю
					</ComboBoxItem>
					<ComboBoxItem>
						возраст
					</ComboBoxItem>
				</ComboBox>
			</StackPanel>
			<StackPanel>
				<TextBlock
					HorizontalAlignment="Center"
					Text="Скидка">
				</TextBlock>
				<ComboBox
					VerticalAlignment="Center"
					Width="100"
					x:Name="discountComboBox">
					<ComboBoxItem>
						без сорт
					</ComboBoxItem>
					<ComboBoxItem>
						убывю
					</ComboBoxItem>
					<ComboBoxItem>
						возраст
					</ComboBoxItem>
				</ComboBox>
			</StackPanel>
			<StackPanel>
				

			</StackPanel>

			<TextBlock></TextBlock>
		</StackPanel>
		<ListBox x:Name="TovarBox">
			<ListBox.ItemTemplate>
				<DataTemplate>
					<Border Background="{Binding Discount, Converter={StaticResource DiscountToBackgroundConverter}}"
        BorderBrush="Gray"
        BorderThickness="1"
        Padding="5">
						<StackPanel HorizontalAlignment="Center">
							<StackPanel>
								<Image
					Source="{Binding ImagePath}"
									Width="100"
									Height="100">

								</Image>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Text="Название: ">
								</TextBlock>
								<TextBlock
					Text ="{Binding ProductName}"
									TextWrapping="Wrap"
									TextAlignment="Center"/>
							</StackPanel>
							<StackPanel Orientation="Horizontal">
								<TextBlock
									Text="Описание: ">
								</TextBlock>
								<TextBlock
									Text ="{Binding Description}"
									TextAlignment="Center">
								</TextBlock>
							</StackPanel>


							<StackPanel Orientation="Horizontal">
								<TextBlock
									Text="Производитель: ">
								</TextBlock>
								<TextBlock
									Text ="{Binding Manufacturer}"
									TextAlignment="Center">

								</TextBlock>
							</StackPanel>


							<StackPanel Orientation="Horizontal">
								<TextBlock
									Text="Цена: ">
								</TextBlock>
								<TextBlock
									Text ="{Binding Price}"
									TextAlignment="Center">

								</TextBlock>
							</StackPanel>


							<StackPanel Orientation="Horizontal">
								<TextBlock
									Text="Скидка: ">
								</TextBlock>
								<TextBlock
									Text ="{Binding Discount}"
									TextAlignment="Center">

								</TextBlock>
							</StackPanel>
						</StackPanel>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>

		</ListBox>
	</DockPanel>
</Window>
